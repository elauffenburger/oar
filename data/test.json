{
    "numRows": 50,
    "fields": [
        {
            "name": "A Number",
            "type": "number"
        },
        {
            "name": "FirstName",
            "type": "firstname"
        },
        {
            "name": "LastName",
            "type": "lastname"
        },
        {
            "name": "FullName",
            "type": "fullname"
        }
    ],
    "options": {

    },
    "types": {
        "number": {
            "loader": {
                "name": "number"
            }
        },
        "firstname": {
            "loader": {
                "name": "csvloader",
                "args": {
                    "separator": "\n",
                    "src": "./data/firstnames.csv"
                }
            }
        },
        "lastname": {
            "loader": {
                "name": "csvloader",
                "args": {
                    "separator": "\n",
                    "src": "./data/lastnames.csv"
                }
            }
        },
        "fullname": {
            "loader": {
                "name": "strformat",
                "args": {
                    "format": "%s %s",
                    "args": [
                        "FirstName",
                        "LastName"
                    ] 
                }
            }
        }
    }
}